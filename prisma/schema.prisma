generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mongodb"
  url = env("MONGODB_PRISMA_CUSTOM_URL")
  directUrl = env("MONGODB_URL")
}

model todo {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  isDone    Boolean
}
